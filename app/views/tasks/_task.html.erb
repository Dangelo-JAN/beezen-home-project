<div id="<%= dom_id task %>">

  <div class="overflow-hidden bg-white shadow sm:rounded-lg">
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Owner</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= task.user_id %></dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Task</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= task.name %></dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Description</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:col-span-2 sm:mt-0"><%= task.description %></dd>
        </div>

          <%= render :partial => "alerts_task", :collection => task.alerts, as: :alert %>

      </dl>
    </div>
  </div>

  <div class="mt-2 mb-10">
    <% if action_name != "show" %>
      <%= link_to "Show this task", task, class: "rounded-lg py-3 px-5 bg-orange-400 inline-block font-medium" %>
      <%= link_to 'Edit this task', edit_task_path(task), class: "rounded-lg py-3 ml-2 px-5 bg-orange-400 inline-block font-medium" %>
    <% end %>
  </div>
</div>