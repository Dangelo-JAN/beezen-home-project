<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto mb-32 mt-10 w-4/5">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @task %>

    <% if current_user %>
      <%= link_to 'Edit this task', edit_task_path(@task), class: "mt-2 rounded-lg py-3 px-5 bg-orange-400 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to 'Destroy this task', task_path(@task), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-orange-400 font-medium" %>
      </div>
    <% end %>
    <%= link_to 'Back to tasks', tasks_path, class: "ml-2 rounded-lg py-3 px-5 bg-orange-400 inline-block font-medium" %>
  </div>
</div>
